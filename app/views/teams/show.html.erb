<div class="user_feed">
    <div class="sidebar">
        <h3><b><%= @team.name%></b></h3> <br>
        <h4>Team Members:</h4>
        <ul class="list-unstyled">
            <% @userteam.each do |ut| %>
                <li class="media">
                    <div class="media-body">
                        <%= link_to ut.user.name, user_path(@user.slug), :class => "card-link"%>
                    </div>
                </li>
            <% end %> 
        </ul><br>
        <ul>
            <% @projects.each do |project| %>
                <h4>Project Name: <%= project.name %></h4>
                Total days for project: <%= project.total_project_days%><br>
                Days left for Project: <%= project.days_left_for_project%>
            <% end %>
        </ul><br/>
        <br>
        <h4>Project Stats:</h4>        
        Total posts made by team: <%= @team.num_posts%><br>
        Total number of team members: <%= @team.num_users%><br>
        Upcoming due project: <%= @team.next_project_due%>
        <br/><br>
        <%= link_to '<button type="button" class="btn btn-success">Create a New Post</button>'.html_safe, new_post_path %><br/><br/>
    </div>


    <div class="col1">
        <h2><%="Posts"%></h2><br>
        <ul class="list-unstyled">
            <% @userteam.each do |ut| %>
                <% ut.posts.each do |post| %>
                    <li class="media">
                    <div class="media-body">
                        <h4 class="mt-0 mb-1"><%= "#{post.title}" %></h4><br>
                        <h5><i>"<%= post.description %>"</i></h5><br>
                        <div class="file_loc">File Location: <%= post.file %></div>
                        <b><%= ut.user.name %></b><br>
                        <% if ut.user.slug == session[:user_slug] %>
                        <%= link_to '<button type="button" class="btn btn-outline-success">Edit This Post</button>'.html_safe, edit_post_path(post) %>
                        <% end %>
                        <br/><br/><br/>
                    </div>
                    </li>
                <% end %>    
            <% end %>
        </ul>

    </div>
</div>


