<div class="user_feed">
    <div class="center">
        <h1>Create a new post:</h1>
        <%= form_for @post do  |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => "form-control" %><br/>
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => "form-control" %><br/>
        <%= f.label :link_a_file %><br>
        <%= f.text_field :file, :class => "form-control" %><br/>
        <%= f.label :Select_team_for_post %><br>
        <%= f.collection_select :user_team_id, @uts, :id, :team_name %><br><br>
        <%= f.submit "Submit Post", :class => "btn btn-outline-success" %>
        <% end %>
    </div>
</div>
