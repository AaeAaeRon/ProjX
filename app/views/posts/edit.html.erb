<div class="user_feed">
    <div class="center">
        <h1>Edit a post:</h1>
        <%= form_for @post do  |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => "form-control" %><br/>
        <%= f.label :post_body %><br>
        <%= f.text_area :description, :class => "form-control" %><br/>
        <%= f.label :link_a_file %><br>
        <%= f.text_field :file, :class => "form-control" %><br/>
        <%= f.label :Select_team_for_post %><br>
        <%= f.collection_select :user_team_id, @uts, :id, :team_name, {:prompt=>true}, {:class=>"form-control"} %><br>
        <%= f.submit "Update Post", :class => "btn btn-outline-success" %>
        <% end %>
        <%= form_for @post, method: :delete do |f| %>
        <%= f.submit "Delete Post", :class => "btn btn-outline-success" %>
        <% end %>
        <%= link_to '<button type="button" class="btn btn-outline-success">Create a New Post</button>'.html_safe, new_post_path %>

    </div>
</div>

